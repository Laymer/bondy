                    "is_collection" : false,
                    "options": {
                        "action": {},
                        "response": {
                            "on_error": {
                                "body": ""
                            },
                            "on_result": {
                                "body": ""
                            }
                        }
                    },
                    "post": {
                        "action": {
                            "type": "wamp_call",
                            "procedure": "com.leapsight.bondy.security.change_password",
                            "options": {},
                            "arguments": [
                                "{{request.bindings.realm_uri}}",
                                "{{request.body.username}}",
                                "{{request.body.new_password}}"
                            ],
                            "arguments_kw": {}
                        },
                        "response": {
